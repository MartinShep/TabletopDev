<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="FurnitureWithQualityBase" Abstract="True">
        <defName>RPGCampaign</defName>
        <label>RPG campaign</label>
        <description>A custom campaign for a tabletop RPG.</description>
        <graphicData>
            <shadowData>
                <volume>(0.45, 0.15, 0.35)</volume>
            </shadowData>
            <texPath>Things/Building/Furniture/DMScreen</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>(2,2)</drawSize>
        </graphicData>
        <fillPercent>0.15</fillPercent>
        <altitudeLayer>MoteOverhead</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <designationCategory>Joy</designationCategory>
        <minifiedDef>MinifiedThing</minifiedDef>
        <socialPropernessMatters>true</socialPropernessMatters>
        <thingCategories>
            <li>BuildingsJoy</li>
        </thingCategories>
        <tradeTags>
            <li>Exotic</li>
        </tradeTags>
        <building>
            <joyKind>Gaming_Cerebral</joyKind>
            <isEdifice>false</isEdifice>
            <canBuildNonEdificesUnder>true</canBuildNonEdificesUnder>
        </building>
        <clearBuildingArea>false</clearBuildingArea>
        <size>(2,1)</size>
        <researchPrerequisites>
            <li>TabletopRPGs</li>
        </researchPrerequisites>
        <stuffCategories>
            <li>Woody</li>
            <li>Fabric</li>
            <li>Leathery</li>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>50</costStuffCount>
        <comps>
            <li Class="BoardgameDev.RpgCampaignCompProperties"/>
        </comps>
        <uiIconOffset>(0,0.3)</uiIconOffset>
    </ThingDef>

    <ThingDef ParentName="RPGCampaign">
        <defName>ShortRPGCampaign</defName>
        <label>Short RPG campaign</label>
        <description>A short custom campaign for a tabletop RPG.</description>
        <statBases>
            <MaxHitPoints>75</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <MarketValue>150</MarketValue>
            <Mass>7.5</Mass>
            <JoyGainFactor>1</JoyGainFactor>
            <WorkToBuild>15000</WorkToBuild>
        </statBases>
    </ThingDef>

    <ThingDef ParentName="RPGCampaign">
        <defName>MediumRPGCampaign</defName>
        <label>Medium RPG campaign</label>
        <description>A medium-length custom campaign for a tabletop RPG.</description>
        <statBases>
            <MaxHitPoints>75</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <MarketValue>150</MarketValue>
            <Mass>7.5</Mass>
            <JoyGainFactor>1</JoyGainFactor>
            <WorkToBuild>40000</WorkToBuild>
        </statBases>
    </ThingDef>

    <ThingDef ParentName="RPGCampaign">
        <defName>LongRPGCampaign</defName>
        <label>Long RPG campaign</label>
        <description>A long custom campaign for a tabletop RPG.</description>
        <statBases>
            <MaxHitPoints>75</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <MarketValue>150</MarketValue>
            <Mass>7.5</Mass>
            <JoyGainFactor>1</JoyGainFactor>
            <WorkToBuild>100000</WorkToBuild>
        </statBases>
    </ThingDef>

</Defs>
