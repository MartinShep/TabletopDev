<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThoughtDef>
        <defName>PlayedRpgGame</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>1.0</durationDays>
        <stackLimit>1</stackLimit>
        <stages>
            <li>
                <label>played bad game</label>
                <description>I lost horribly in an unfair game!</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
            <li>
                <label>played ok game</label>
                <description>That was an interesting game.</description>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
            <li>
                <label>played decent game</label>
                <description>That was a fun game.</description>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>played good game</label>
                <description>That was a pretty fun game.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>played excellent game</label>
                <description>That was a really fun game.</description>
                <baseMoodEffect>5</baseMoodEffect>
            </li>
            <li>
                <label>played a masterpiece</label>
                <description>That was an incredible game!</description>
                <baseMoodEffect>8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>PlayedEscapeRoom</defName>
        <thoughtClass>Thought_Memory</thoughtClass>
        <durationDays>1.0</durationDays>
        <stackLimit>1</stackLimit>
        <stages>
            <li>
                <label>played bad escape room</label>
                <description>That escape room was not fair!</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
            <li>
                <label>played decent escape room</label>
                <description>That was a fun escape room.</description>
                <baseMoodEffect>5</baseMoodEffect>
            </li>
            <li>
                <label>played a masterpiece escape room</label>
                <description>That was an incredible escape room!</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>
